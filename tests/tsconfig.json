{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "..",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["../src/**/*", "**/*"],
  "exclude": ["../node_modules", "../dist", "../packages"]
}
